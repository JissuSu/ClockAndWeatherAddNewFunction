<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/datelinear"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dip"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <ImageView
                android:id="@+id/clock1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/one" />

            <ImageView
                android:id="@+id/clock2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/one" />

            <ImageView
                android:id="@+id/dotdot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/dotdot" />

            <ImageView
                android:id="@+id/clock3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/one" />

            <ImageView
                android:id="@+id/clock4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/one" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dip"
                android:layout_marginLeft="9dip"
                android:background="@drawable/line" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="9dip"
            android:layout_marginTop="4dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/msign"
                android:layout_width="23dip"
                android:layout_height="18dip"
                android:background="@drawable/bg_ampm"
                android:paddingLeft="3.7dip"
                android:paddingTop="1.5dip"
                android:shadowColor="#BF000000"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:textColor="#fff"
                android:textSize="10dip"
                android:textStyle="bold"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/weekday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#55000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="1"
                    android:textColor="#FFFFFe"
                    android:textSize="14dip" />

                <TextView
                    android:id="@+id/weeknum"
                    android:layout_width="wrap_content"
                    android:layout_height="14dip"
                    android:shadowColor="#B3000001"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="1"
                    android:textColor="#B3fffffe"
                    android:textSize="12dip"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dip"
                android:shadowColor="#44000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="1"
                android:textColor="#FFFFFF"
                android:textSize="15dip" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>