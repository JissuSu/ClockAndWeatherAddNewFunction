<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayoutParent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="30dip"
    android:paddingRight="30dip"
    android:paddingTop="10dip" >

    <LinearLayout
        android:id="@+id/detailLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_back"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dip" >

        <ImageView
            android:id="@+id/today_image"
            android:layout_width="150dip"
            android:layout_height="100dip"
            android:src="@drawable/cloud" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dip"
            android:text="Beijing"
            android:textColor="#fff"
            android:textSize="30dip"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dip"
            android:gravity="center"
                     android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/today_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="42dip" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/condition"
                    android:layout_width="wrap_content"
                    android:maxLines="2"
                    
                    android:layout_height="wrap_content"
                    android:text="Partly Cloud"
                    android:textColor="#80ffffff"
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/today_low_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14dip" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:textColor="#80ffffff"
            android:textSize="12.5dip" />

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dip"
            android:textColor="#80ffffff"
            android:textSize="12.5dip" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6.5dip"
            android:layout_marginLeft="18dip"
            android:layout_marginRight="18dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/detail_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dip"
            android:paddingRight="15dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:textColor="#fff"
                    android:textSize="14.5dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_one"
                    android:layout_width="wrap_content"
                    android:layout_height="32dip"
                    android:src="@drawable/cloud" />

                <TextView
                    android:id="@+id/temp_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--/--"
                    android:textColor="#fff"
                    android:textSize="12dip" />
            </LinearLayout>

            <ImageView
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dip"
                android:layout_marginTop="7dip"
                android:background="#40ffffff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat"
                    android:textColor="#fff"
                    android:textSize="14.5dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_two"
                    android:layout_width="wrap_content"
                    android:layout_height="32dip"
                    android:src="@drawable/cloud" />

                <TextView
                    android:id="@+id/temp_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14/41"
                    android:textColor="#fff"
                    android:textSize="12dip" />
            </LinearLayout>

            <ImageView
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dip"
                android:layout_marginTop="7dip"
                android:background="#40ffffff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/day_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sun"
                    android:textColor="#fff"
                    android:textSize="14.5dip"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image_three"
                    android:layout_width="wrap_content"
                    android:layout_height="32dip"
                    android:src="@drawable/cloud" />

                <TextView
                    android:id="@+id/temp_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/33"
                    android:textColor="#fff"
                    android:textSize="12dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:paddingTop="5dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/refresh"
                android:layout_width="60dip"
                android:layout_height="fill_parent"
                android:paddingLeft="5dip"
                android:background="#00000000"
                android:src="@drawable/button_refresh_selector" />

            <TextView
                android:id="@+id/updatetime"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2012-3-18 22:00"
                android:textColor="#66ffffff"
                android:textSize="9dip" />

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="60dip"
                android:paddingRight="5dip"
                android:layout_height="fill_parent"
                android:background="#00000000"
                android:src="@drawable/button_setting_selector" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>