<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyAlarmDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/sms_alarm_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:minHeight">20dip</item>
    </style>

    <style name="MyDetailDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/sms_alarm_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:minHeight">800dip</item>
        <item name="android:minWidth">480dip</item>
    </style>

    <style name="DetailDialog" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:gravity">center</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
